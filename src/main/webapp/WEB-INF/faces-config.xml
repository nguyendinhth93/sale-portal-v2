<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        <locale-config>
            <default-locale>vi</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.tp.config.lang.Utf8ResourceBundle</base-name>
            <var>lang</var>
        </resource-bundle>
    </application>
    <component>
        <component-type>org.primefaces.component.Ultima</component-type>
        <component-class>com.tp.common.ultima.Ultima</component-class>
    </component>
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.UltimaRenderer</renderer-type>
            <renderer-class>com.tp.common.ultima.UltimaRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>